    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sanity Check",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": "--help"
        },
        {
            "name": "Run Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": "ior _examples/main.or"
        },
        {
            "name": "Run Example (Verbose)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": "ior _examples/main.or -v6"
        }
    ]
}